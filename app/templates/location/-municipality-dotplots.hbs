<section class="stream__section">
  <header class="section__header">
  <h3 class="section__head">{{t 'location.show.overview'}}</h3>
  </header>
  <table class="table--summaries">
    <thead>
      <tr class="table__row table__row--header">
        <th class="table__header"></th>
        <th class="table__header table__header--summaries--value">
          {{t 'location.show.value'}}
          <div class="table__cell--rank title">
            <div class="value title">
              {{t 'rankings.table-title'}}
            </div>
          </div>
        </th>
        <th class="table__header table__header--summaries--dotplot">
          {{t 'location.show.all_departments'}}
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="table__row table__row--body">
        <td class="table__cell table__cell--summaries">
          {{t 'location.show.ag_farmsize'}}
        </td>
        <td class="table__cell table__header--summaries--value">
          {{model.agFarmsize}}
          {{table-rank rank=model.agFarmsizeRank}}
        </td>
        <td class="table__cell table__cell--summaries">
          {{vistk-dotplot
            elementId='dotplot--agfarmsizes'
            data=model.agFarmsizesData
            varX='avg_farmsize'
            varId='location_id'
            type='decimal'
            currentSelection=locationId
          }}
        </td>
      </tr>
      <tr class="table__row table__row--body">
        <td class="table__cell table__cell--summaries">
          {{t 'location.show.nonag_farmsize'}}
        </td>
        <td class="table__cell table__header--summaries--value">
          {{model.nonagFarmsize}}
          {{table-rank rank=model.nonagFarmsizeRank}}
        </td>
        <td class="table__cell table__cell--summaries">
          {{vistk-dotplot
            elementId='dotplot--nonagfarmsizes'
            data=model.nonagFarmsizesData
            varX='avg_farmsize'
            varId='location_id'
            type='decimal'
            currentSelection=locationId
          }}
        </td>
      </tr>
    </tbody>
  </table>
</section>

